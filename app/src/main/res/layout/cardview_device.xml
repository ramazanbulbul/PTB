<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llDevice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:paddingVertical="8dp"
    android:background="@drawable/bg_shadow">
    <ImageView
        android:id="@+id/imgBtIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_bluetooth_24"/>
    <EditText
        android:id="@+id/txtDeviceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Arka Bahçe"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/orb_purple"
        android:background="@drawable/bg_edittext"
        android:enabled="false"/>
    <EditText
        android:id="@+id/txtDeviceAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Arka Bahçe"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/orb_purple"
        android:background="@drawable/bg_edittext"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/imgConnect"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_connection"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/imgEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="@drawable/bg_shadow"
        android:src="@drawable/ic_edit"/>

<!--    <ImageView-->
<!--        android:id="@+id/imgDelete"-->
<!--        android:layout_width="40dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:padding="5dp"-->
<!--        android:background="@drawable/bg_shadow"-->
<!--        android:src="@drawable/ic_trash"/>-->
</LinearLayout>