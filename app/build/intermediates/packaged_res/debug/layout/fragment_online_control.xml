<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/btDate"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/roboto_light"
            android:text=""
            android:textColor="#fff"
            android:textSize="28sp"
            android:layout_marginTop="45dp"
            android:gravity="center"
            />
    </RelativeLayout>
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="2"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        >
        <TextView
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <TextView
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="1"
            android:gravity="center"
            android:layout_margin="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="1. Kanal"
                />
            <Switch
                android:id="@+id/switchKanal1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:track="@drawable/bg_track"
                android:thumb="@drawable/ic_thumb_512"
                android:scaleX="3"
                android:scaleY="3"
                android:checked="false"
                android:enabled="false"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="2"
            android:gravity="center"
            android:layout_margin="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="2. Kanal"
                />
            <Switch
                android:id="@+id/switchKanal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:track="@drawable/bg_track"
                android:thumb="@drawable/ic_thumb_512"
                android:scaleX="3"
                android:scaleY="3"
                android:checked="false"
                android:enabled="false"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="3"
            android:gravity="center"
            android:layout_margin="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="3. Kanal"
                />
            <Switch
                android:id="@+id/switchKanal3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:track="@drawable/bg_track"
                android:thumb="@drawable/ic_thumb_512"
                android:scaleX="3"
                android:scaleY="3"
                android:checked="false"
                android:enabled="false"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="4. Kanal"
                />
            <Switch
                android:id="@+id/switchKanal4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:track="@drawable/bg_track"
                android:thumb="@drawable/ic_thumb_512"
                android:scaleX="3"
                android:scaleY="3"
                android:checked="false"
                android:enabled="false"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </RelativeLayout>
        <TextView
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
        <TextView
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>